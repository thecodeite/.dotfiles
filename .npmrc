# npm configuration for React/Node.js development

# Always save exact versions
save-exact=true

# Use npm audit to scan for vulnerabilities  
audit-level=moderate

# Automatically install peer dependencies
auto-install-peers=true

# Progress display
progress=true

# Set default init values
init-author-name=
init-author-email=
init-license=MIT
init-version=0.1.0

# Cache settings
cache-min=86400

# Registry settings (uncomment and modify if using private registry)
# registry=https://registry.npmjs.org/

# Fund messages
fund=false